    <file>kraken/scenes/scene.urdf</file>
    <position>
      <x> 0 </x>
      <y> 0 </y>
      <z> 9 </z>
    </position>
    <orientation>
      <r>0</r>
      <p>0</p>
      <y>0</y>
    </orientation>
  </vehicle>
