    <lookAt>
      <x>0</x>
      <y>0 </y>
      <z>0 </z>
    </lookAt>
  </camera>

  <vehicle>
    <name>kraken</name>
    <file>kraken/scenes/kraken_stripped.urdf</file>
    <position>
      <x> 0</x>
      <y> 0 </y>
      <z> 0 </z>
    </position>
    <orientation>
      <r>0</r>
      <p>0</p>
      <y>0</y>
    </orientation>
    <virtualCamera>
      <name>front</name>
      <relativeTo>camera_front_optical</relativeTo>
      <resw> 320</resw>
      <resh> 240 </resh>
      <position>
        <x> 0 </x>
        <y> 0 </y>
        <z> 0 </z>
      </position>  
      <orientation>
        <r>0</r>
        <p>0</p>
        <y>3.14 </y>
      </orientation>
    </virtualCamera>
    <virtualCamera>
      <name>bottom</name>
      <relativeTo>camera_bottom_optical</relativeTo>
      <resw> 320</resw>
      <resh> 240 </resh>
      <position>
        <x> 0 </x>
        <y> 0 </y>
        <z> 0 </z>
      </position>  
      <orientation>
        <r>0</r>
        <p>0</p>
        <y>3.14 </y>
      </orientation>
    </virtualCamera>
    <imu>
      <name>imu</name>
      <relativeTo>imu_link</relativeTo>
      <position>
        <x>0</x>
        <y>0</y>
