    <ROSOdomToPAT>
      <topic> /kraken/simulator/dataNavigator </topic>
      <vehicleName> kraken </vehicleName>
      <visualize> 1 </visualize>
    </ROSOdomToPAT>
    <ArmToROSJointState> 
	<topic>/kraken/simulator/joint_state</topic>
	<vehicleName> kraken </vehicleName>
    </ArmToROSJointState>
    <ROSJointStateToArm> 
      <topic>/kraken/simulator/joint_state_command</topic>
      <vehicleName> kraken </vehicleName>
      </ROSJointStateToArm>
    <VirtualCameraToROSImage> 
      <cameraName>front</cameraName>
      <imageTopic> /kraken/front_camera </imageTopic>
      <infoTopic> /kraken/front_camera_info </infoTopic>
    </VirtualCameraToROSImage>
    <VirtualCameraToROSImage> 
      <cameraName>bottom</cameraName>
      <imageTopic> /kraken/bottom_camera </imageTopic>
      <infoTopic> /kraken/bottom_camera_info </infoTopic>
    </VirtualCameraToROSImage>
    <ImuToROSImu>
      <name>imu</name>
      <topic>/kraken/simulator/imu</topic>
      <rate>10</rate>
    </ImuToROSImu>
    <PressureSensorToROS>
      <name>pressureSensor</name>
      <topic>/kraken/simulator/depth</topic>
      <rate>5</rate>
    </PressureSensorToROS>
    <DVLSensorToROS>
      <name>DVLSensor</name>
      <topic>/kraken/simulator/dvl</topic>
      <rate>5</rate>
    </DVLSensorToROS>

    <ROSTwistToPAT>
      <topic> /kraken/simulator/twist</topic>
      <vehicleName> kraken </vehicleName>
    </ROSTwistToPAT>
    <ROSPoseToPAT>
      <topic> /kraken/simulator/pose</topic>
      <vehicleName> kraken </vehicleName>
    </ROSPoseToPAT>
  </rosInterfaces>
